<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" /> <!-- Adjust corner radius as needed -->
            <solid android:color="@color/selected" /> <!-- Selected track color -->
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" /> <!-- Adjust corner radius as needed -->
            <solid android:color="@color/unselected" /> <!-- Unselected track color -->
        </shape>
    </item>
</selector>
