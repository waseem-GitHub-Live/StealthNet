<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TransparentAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="SearchViewStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/custom_hint_color</item>
    </style>

    <style name="CustomRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/selected</item> <!-- For selected state -->
        <item name="android:checkedButton">@drawable/unselected</item> <!-- For unselected state -->
    </style>



</resources>